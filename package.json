{
  "name": "iexec",
  "version": "8.0.0-alpha.3",
  "description": "iExec SDK",
  "type": "module",
  "main": "dist/lib/index.js",
  "types": "dist/lib/index.d.ts",
  "engine": {
    "node": ">=14.17.0",
    "npm": ">=8"
  },
  "scripts": {
    "postinstall": "npm run generate-json-es-modules",
    "test": "jest --coverage --runInBand --detectOpenHandles --forceExit",
    "build": "npm run generate-json-es-modules && npm run generate-dist && npm run generate-packages && npm run generate-doc",
    "lint": "eslint src",
    "generate-json-es-modules": "rm -rf src/common/generated && node generateEsModulesFromJson.cjs",
    "generate-dist": "./node_modules/.bin/babel src --out-dir dist --copy-files",
    "generate-packages": "node generatePackages.cjs",
    "generate-doc": "npm run generate-lib-doc && npm run generate-cli-doc",
    "generate-lib-doc": "./node_modules/typedoc/bin/typedoc --tsconfig tsconfig.doc.json --disableSources",
    "generate-cli-doc": "node generateCliDoc.cjs"
  },
  "bin": {
    "iexec": "./dist/cli/cmd/iexec.js"
  },
  "files": [
    "dist/",
    "src/",
    "iexec_sdk_logo.jpg",
    "IExec/",
    "IExecAccountModule/",
    "IExecAppModule/",
    "IExecConfig/",
    "IExecDatasetModule/",
    "IExecDealModule/",
    "IExecHubModule/",
    "IExecModule/",
    "IExecENSModule/",
    "IExecNetworkModule/",
    "IExecOrderModule/",
    "IExecOrderbookModule/",
    "IExecResultModule/",
    "IExecStorageModule/",
    "IExecWalletModule/",
    "IExecWorkerpoolModule/",
    "IExecTaskModule/",
    "errors/",
    "utils/",
    "IExecSecretsModule/"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/iExecBlockchainComputing/iexec-sdk.git"
  },
  "author": "iExec",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/iExecBlockchainComputing/iexec-sdk/issues"
  },
  "homepage": "https://github.com/iExecBlockchainComputing/iexec-sdk#readme",
  "dependencies": {
    "@ensdomains/ens-contracts": "^0.0.17",
    "@iexec/erlc": "^1.0.0",
    "@iexec/poco": "^5.3.0",
    "@types/bn.js": "^5.1.1",
    "aes-js": "3.1.2",
    "bn.js": "^5.2.1",
    "buffer": "^6.0.2",
    "commander": "^10.0.0",
    "cross-fetch": "^3.1.5",
    "debug": "^4.3.4",
    "ethers": "^5.7.2",
    "fs-extra": "^11.1.0",
    "image-size": "^1.0.2",
    "inquirer": "^9.1.4",
    "is-docker": "^2.2.1",
    "jszip": "^3.10.1",
    "multiaddr": "^10.0.1",
    "node-rsa": "^1.1.1",
    "ora": "^5.4.1",
    "prettyjson": "^1.2.5",
    "query-string": "^7.1.3",
    "rlc-faucet-contract": "^1.0.10",
    "semver": "^7.3.8",
    "update-check": "^1.5.4",
    "yup": "^0.32.11"
  },
  "devDependencies": {
    "@babel/cli": "^7.20.7",
    "@babel/core": "^7.20.12",
    "@babel/preset-env": "^7.20.2",
    "eslint": "^8.33.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-import": "^2.27.5",
    "jest": "^29.4.1",
    "prettier": "^2.8.3",
    "typedoc": "^0.23.24",
    "typedoc-plugin-markdown": "^3.14.0",
    "typedoc-plugin-missing-exports": "^1.0.0",
    "typedoc-plugin-rename-defaults": "^0.6.4",
    "typescript": "^4.9.4",
    "web3-eth": "^1.8.1"
  },
  "babel": {
    "presets": [
      [
        "@babel/env",
        {
          "targets": {
            "node": "14.0.0",
            "browsers": [
              "defaults",
              "not IE 11"
            ]
          }
        }
      ]
    ]
  },
  "jest": {
    "testEnvironment": "node"
  }
}
